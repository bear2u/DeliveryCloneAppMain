<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="kr.pe.deliverycloneapp2.flow.register.RegisterActivity"
        android:padding="10dp"
>

    <ImageButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/no_image_icon"
                 android:background="@null"
                 app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                 android:layout_marginEnd="8dp" android:layout_marginBottom="392dp"
                 app:layout_constraintBottom_toBottomOf="parent"
                 android:id="@+id/thumbnail" app:layout_constraintHorizontal_bias="0.477" android:layout_marginTop="8dp"
                 app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="제목"
            android:ems="10"
            android:id="@+id/tv_title"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:hint="상세내용"
            android:ems="10"
            android:id="@+id/editText2" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="top|left"
    />

    <Spinner android:layout_width="wrap_content" android:layout_height="22dp"
             android:id="@+id/spinner"
             android:entries="@array/menus"
             android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
             android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintHorizontal_bias="0.503" android:layout_marginTop="20dp"
             app:layout_constraintTop_toBottomOf="@+id/btnGallery"></Spinner>
    <Button
            android:text="등록"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRegister" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.503" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2" app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="카메라"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCamera"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/thumbnail"
            app:layout_constraintVertical_bias="0.012"/>
    <Button
            android:text="갤러리"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGallery" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/thumbnail"
            app:layout_constraintStart_toEndOf="@+id/btnCamera" android:layout_marginStart="24dp"/>
    <Button
            android:text="삭제"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDelete" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/thumbnail" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/btnGallery"
            android:layout_marginStart="8dp"/>


</android.support.constraint.ConstraintLayout>
